extends addlayout

block content
  div.header
    a(href= "/", id= "backButton") <
    img(id="addLogo",src="images/logo.png", href= "/add") 
    h1 Notes
    br
    br
    br
  hr
  br

  form(id= "usform")
    input(type="text", id="addName", placeholder="TITLE", autofocus required)
    br
    br
    br
    div.text
    textarea(type="text", id="addDescription", placeholder="...", form= "usform" required)
    br
    br
    select(form = "usform", id= "addColor" required)
      option(id= "colorOption", value="#EEEEEE", style= "background-color: #EEEEEE") Standard
      option(id= "colorOption",value="#F3E0E0", style= "background-color: #F3E0E0") Red
      option(id= "colorOption",value="#E0E0F3", style= "background-color: #E0E0F3") Blue
      option(id= "colorOption",value="#E0F3E2", style= "background-color: #E0F3E2") Green
      option(id= "colorOption",value="#F3EDE0", style= "background-color: #F3EDE0") Orange
    p(type="submit", value="v", id="addButton") v
    br
  
  div.weather
    ul
